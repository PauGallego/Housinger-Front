    <!-- CARACTERITICAS -->
    <h2 class="font-bold text-lg lg:ml-[235px] texto-que-hay">¿Que hay en la vivienda?</h2>
    <div class="flex items-center">
    <div class="lg:ml-[235px] contendor-caracteritica mt-5">
        <div class="flex gap-10">
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
        </div>
        <div class="flex gap-10 mt-5">
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
        </div>
        <div class="flex gap-10 mt-5">
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
            <div>
                <input type="checkbox" class="h-[20px] w-[20px]">
                <i class="icon-[material-symbols--wifi] h-[25px] w-[25px]"></i>
                <label class="font-bold">Wifi</label>
            </div>
        </div>
        <button class="mt-10 boton-modal lg:w-40">Mostrar más</button>
    </div>
    <!-- BARRA VERTICAL -->
    <div class="hidden lg:block bg-secondary h-[200px] w-[2px] lg:ml-[240px]"></div>
    <!-- CALENDARIO -->
    <div>
        
    </div>
</div>
    <div class="mb-20"></div>

</main>

    <style>
        :root {
            --primary: #576cbc;
            --secondary: #0b2447;
            --tertiary: #b1ddec;
            --gris: #948e8e;
            --star: #ffd910;
            --menu: #a5d7e8;
        }
        .bg-secondary {
            background-color: var(--gris) !important;
        }
        .imagen-optima{
            object-fit: cover; 
        }

        .boton-direcion {
            border: 1px solid var(--gris);
        }
        body,
        html {
            background-color: #ffff;
        }
        .icon-blue {
            color: var(--primary);
        }

        .descripcion {
            border: 1px solid var(--gris);
            border-radius: 5px;
        }

        .botones-propiedad {
            background-color: var(--primary);
            box-shadow: 0px 5px 5px 0px var(--gris);
        }

        .boton-modal {
            background-color: white;
            border: 1px solid var(--gris);
            padding: 5px;
            border-radius: 5px;
            box-shadow: 0px 5px 5px 0px var(--gris);
        }

        /* MOBIL */
        @media screen and (max-width: 390px) {
            .prpiedad-foto-1 {
            height: 80px;
            width: auto;
        }
        }

        /* TABLET */
        @media screen and (width: 768px) {
            .prpiedad-foto-1 {
            height: 120px;
            width: auto;
        }
        }

        /* PC */
        @media screen and (width: 1440px) {
            .contendor-direcion{
                margin-left: 0px;
            }

            .contendor-descripcion {
                margin-left: 0px;
            }

            .descripcion {
                width: 100%;
            }

            .contenedor-propietario {
                margin-left: 0px;
            }
            .texto-que-hay {
                margin-left: 0px;
            }

            .contendor-caracteritica {
            margin-left: 0px;
            }
        }
    </style>
</Layout>

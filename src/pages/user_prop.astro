            <img class="prpiedad-foto-1 mt-10 rounded-[10px] h-[104px] w-[auto] md:h-[160px] lg:h-[130px]" src="../../casa1.jpg" alt="imagen-propiedad" />
        </div>
    </div>
        <!--IMAGEN PIE --> 
        <div class="flex justify-center items-center gap-[10px] lg:gap-[35px]">
            <img class="prpiedad-foto-1 mt-10 rounded-[10px] h-[104px] w-[auto] md:h-[160px] lg:h-[130px]" src="../../casa1.jpg" alt="imagen-propiedad" />
            <img class="prpiedad-foto-1 mt-10 rounded-[10px] h-[104px] w-[auto] md:h-[160px] lg:h-[130px]" src="../../casa1.jpg" alt="imagen-propiedad" />
            <img class="prpiedad-foto-1 mt-10 rounded-[10px] h-[104px] w-[auto] md:h-[160px] lg:h-[130px]" src="../../casa1.jpg" alt="imagen-propiedad" />
            <img class="prpiedad-foto-1 mt-10 rounded-[10px] h-[104px] w-[auto] md:h-[160px] lg:h-[130px]  hidden lg:block" src="../../casa1.jpg" alt="imagen-propiedad" />
        </div>

        <!--DESCRIPCION -->
        <div class="lg:ml-[240px] mt-10 contendor-descripcion">
            <textarea class="p-2 descripcion w-full lg:w-[79%] h-30" placeholder="Caracteristicas"></textarea>
        </div>

        <!--PROPIETARIO -->
        <div class="flex gap-[100px] md:gap-[50px] mb-10">
        <div class="lg:flex lg:items-center lg:gap-10 md:flex md:items-center md:gap-10 mt-10">
        <div class="flex items-center contenedor-propietario lg:ml-[240px] gap-5">
            <div class="flex items-center gap-5">
            <div>
                <h2 class="font-bold">Propietario</h2>
                <p>Maria Perez Mari</p>
            </div>
            <div>
                <img class="imagen-optima h-[90px] w-[100px] rounded-[50%]" src="../../public/perfil.jpg" alt="">
            </div>
            </div>
        </div>
        <div class="rating">
            <input type="radio" name="rating-4" class="mask mask-star-2 bg-yellow-500" />
            <input type="radio" name="rating-4" class="mask mask-star-2 bg-yellow-500" checked />
            <input type="radio" name="rating-4" class="mask mask-star-2 bg-yellow-500" />
